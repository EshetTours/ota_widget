---
reviews-over-time.mdc-image-list__item
  .over_time.chart.block.mdc-elevation--z1 if='{d.reviews_over_time}'
    .material-icons.info
      'info
    h2
      '{t('over_time.title')}

      button onclick="ota_widget.charts.changePeriod('reviews_over_time', 'quarter');" class='{selected: ota_widget.reviews_over_time.period == "quarter"}'
        '{t('charts.quarter')}
      button onclick="ota_widget.charts.changePeriod('reviews_over_time', 'year')" class='{selected: ota_widget.reviews_over_time.period == "year"}'
        '{t('charts.year')}
    #over-time-chart style="width: 100%; height: 500px;"

  javascript:
    ota_widget.ui.tagClass.bind(this)()

    this.on('mount', function() {
      tippy('reviews-over-time .material-icons.info', {
        content: this.t('over_time.description'),
      });
    })
