---
summaries.mdc-image-list__item
  .summaries.block.mdc-elevation--z1
    h2
      '{t('summaries.title')}

    .summary-block
      .summary each='{s,i in d.summaries}' if='{s.sentiment && i < 8}'
        .icon class='material-icons {s.sentiment}'
          '{s.sentiment == 'positive' ? 'add_circle_outline' : 'remove_circle_outline'}
        strong.name
          '{translate_summary(s)}


  javascript:
    ota_widget.ui.tagClass.bind(this)()

    translate_summary(s) {
      return this.t('summaries.'+s.slug) || s.text
    }

